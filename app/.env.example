# MultiAgentAI21 Environment Configuration
# Copy this file to .env and fill in your actual values

# =================
# API CONFIGURATION
# =================
GOOGLE_API_KEY=your_google_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# =================
# COMPLIANCE & RATE LIMITING
# =================
# API Rate Limits (Conservative defaults to prevent violations)
API_REQUESTS_PER_MINUTE=5
API_REQUESTS_PER_HOUR=50
API_REQUESTS_PER_DAY=200
API_MIN_INTERVAL=12.0

# Content Limits
MAX_CONTENT_LENGTH=8000
MAX_PROMPT_LENGTH=4000

# Retry Policies
API_MAX_RETRIES=2
API_RETRY_DELAY=30.0
API_MAX_RETRY_DELAY=300.0

# Compliance Features
ENABLE_RATE_LIMITING=true
ENABLE_CONTENT_FILTERING=true
ENABLE_QUOTA_MONITORING=true
ENABLE_USAGE_LOGGING=true
COMPLIANCE_LOG_LEVEL=INFO

# =================
# ENVIRONMENT SETTINGS
# =================
# Environment: development, production, or default
ENVIRONMENT=development

# Application Settings
APP_NAME=MultiAgentAI21
APP_VERSION=1.0.0
DEBUG=false

# =================
# DATABASE & STORAGE
# =================
# Firebase Configuration
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_PRIVATE_KEY_ID=your_private_key_id
FIREBASE_PRIVATE_KEY="your_private_key_here"
FIREBASE_CLIENT_EMAIL=your_client_email
FIREBASE_CLIENT_ID=your_client_id

# File Storage
UPLOAD_DIRECTORY=uploads
LOG_DIRECTORY=logs
COMPLIANCE_LOG_DIRECTORY=logs/compliance

# =================
# SECURITY SETTINGS
# =================
# Session Configuration
SESSION_SECRET_KEY=your_secure_random_string_here
SESSION_TIMEOUT=3600

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# =================
# MONITORING & ALERTS
# =================
# Email for compliance alerts (if implemented)
ADMIN_EMAIL=admin@example.com

# Webhook for alerts (if implemented)  
ALERT_WEBHOOK_URL=https://example.com/webhook

# =================
# FEATURE FLAGS
# =================
# Enable/disable specific agents
ENABLE_DATA_ANALYSIS_AGENT=true
ENABLE_DEVOPS_AGENT=true
ENABLE_CONTENT_CREATOR_AGENT=true
ENABLE_CUSTOMER_SERVICE_AGENT=true
ENABLE_FILE_PROCESSING_AGENT=true

# Advanced Features
ENABLE_LEARNING=true
ENABLE_ADAPTIVE_PROMPTS=true
ENABLE_PERFORMANCE_TRACKING=true

# =================
# TESTING & DEVELOPMENT
# =================
# Test Configuration
ENABLE_TEST_MODE=false
MOCK_API_RESPONSES=false
SKIP_API_CALLS=false

# Development Helpers
VERBOSE_LOGGING=false
ENABLE_DEBUG_ENDPOINTS=false